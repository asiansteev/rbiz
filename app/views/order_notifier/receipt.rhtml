<% @cart.line_items.each do |l| -%>
  <%= l.quantity %> @ <%= l.individual_price %>  <%= l.product.sku %>  <%= l.product.name %> 
<% end -%>
Product Total: <%= @cart.total_price %>
Shipping: <%= @cart.shipping_price %>
Tax: <%= @cart.tax_price %>

GRAND TOTAL
<%= @cart.grand_total %>

Ship To
<%= @cart.shipping_address.name %>
<%= @cart.shipping_address.street %>
<%= @cart.shipping_address.city %>, <%= @cart.shipping_address.state %> <%= @cart.shipping_address.zip %>
<%= @cart.shipping_address.phone %>

<%# only authroize.net payments have billing information -%>
<% if @cart.status == 3 -%>
Bill To
<%= @cart.billing_address.name %>
<%= @cart.billing_address.street %>
<%= @cart.billing_address.city %>, <%= @cart.billing_address.state %> <%= @cart.billing_address.zip %>
<%= @cart.billing_address.phone %>
<% end -%>

Comments
<%= @cart.comments %>
