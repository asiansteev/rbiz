<%= extension_point('/common/header') %>

<% if @coupons.empty? -%>
  <h1> No Coupons are available </h1>
<% else -%>
  <table>
    <tr>
      <th>Code</th>
      <th>Start</th>
      <th>End</th>
      <th>Edit</th>
    </tr>
    <% @coupons.each do |c| -%>
      <tr>
        <td> <%= c.code %> </td>
        <td> <%= c.effective_on.to_s %> </td>
        <td> <%= c.ineffective_on ? c.ineffective_on.to_s : 'Never' %> </td>
        <td> <%= link_to 'Edit', edit_office_coupon_url(c) %> </td>
      </tr>
    <% end -%>
  </table>
<% end -%>

<%= link_to 'New Coupon', new_office_coupon_url %>

<%= extension_point('/common/footer') %>
