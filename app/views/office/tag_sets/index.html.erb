<%= extension_point('/common/header') %>

<%= extension_point('/tag_set/index/before_form') %>
<%= link_to_function "<h4><img src=\"/images/cart/add.gif\" title=\"Add Category\"> Add Category</h4>" do |page|
  page['new_category'].toggle
end %>
<div id="new_category" style="display:none">
  <% remote_form_for :tag_set, :url => office_tag_sets_url do |f| %>
    <%= f.text_field :name %>
    <%= f.submit 'Create' %>
  <% end %>
</div>
<%= extension_point('/tag_set/index/after_form') %>

<%= extension_point('/tag_set/index/before_tree') %>
<table>
  <tbody id="category_list">
    <%= render :partial => 'category', :collection => @categories %>
  </tbody>
</table>
<%= extension_point('/tag_set/index/after_tree') %>

<%= link_to_function "<h4><img src=\"/images/cart/add.gif\" title=\"Add Category\"> Add Category</h4>" do |page|
  page['new_category_bottom'].toggle
end %>
<div id="new_category_bottom" style="display:none">
  <% remote_form_for :tag_set, :url => office_tag_sets_url do |f| %>
    <%= f.text_field :name %>
    <%= f.submit 'Create' %>
  <% end %>
</div>

<%= extension_point('/common/footer') %>
