<h3>Change Password</h3>
<% form_tag do %>
  <p>
  <% unless @customer.reset_password? -%>
    <label for="user_passphrase">Current Passphrase</label>
    <br/>
    <%= password_field :user, :old_passphrase %>
    <br/>
    <br/>
  <% end %>

  <label for="user_passphrase">New Passphrase</label>
  <br/>
  <%= password_field :user, :new_passphrase %>
  <br/>
  <br/>
  <%= submit_tag 'Reset' %>
  </p>
<% end %>
